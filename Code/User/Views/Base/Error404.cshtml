@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error Pages</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/error.css">
</head>
<body>

    <div class="container-fluid error-container">
        <div class="row vh-100 align-items-center justify-content-center" id="error-404">
            <div class="col-md-8 text-center error-content">
                <div class="error-card">
                    <div class="error-icon">
                        <i class="bi bi-exclamation-circle text-white"></i>
                    </div>
                    <h1 class="display-1 fw-bold text-white">404</h1>
                    <h2 class="mb-4 text-white">Không tìm thấy trang</h2>
                    <p class="lead mb-4 text-white">Rất tiếc! Trang bạn đang tìm kiếm không tồn tại hoặc đã bị di chuyển.</p>
                    <a class="btn btn-light me-3" asp-controller="Home" asp-action="Index">
                        Quay về trang chủ
                    </a>
                </div>
            </div>
        </div>
    </div>

       
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

