@{
    ViewData["Title"] = "Super Duolingo";
}
@using ViewModel.Vip;
@model InformationForConfirmViewModel

<style>
    .box {
        border: 4px solid #ffffff22;
        border-radius: 10px;
        box-shadow: 0 2px 6px rgba(255, 255, 255, 0.1);
        padding: 1rem;
        margin-bottom: 1rem;
    }

    label {
        width: 150px;
        font-weight: 500;
    }

    input {
        flex: 1;
        background-color: #c3c3c3c3 !important;
    }

    .qr-box {
        background-color: #1c1c1c;
        padding: 1.5rem;
        border-radius: 12px;
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.1);
        text-align: center;
    }

        .qr-box img {
            max-width: 100%;
            height: auto;
        }

    .form-control {
        border-radius: 10px;
    }

    .form-label {
        font-weight: 500;
    }

    .btn-success {
        transition: background 0.3s ease;
    }

        .btn-success:hover {
            background-color: #28a745cc;
        }

</style>

<div class="container py-5 text-white">
    <h1 class="fw-bold mb-4">Chọn gói đăng ký</h1>

    <!-- Banner -->
    <div class="card text-center text-white mb-4 border-0" style="background: linear-gradient(135deg,#ffaf7b , #d76d77,  #3a1c71); border-radius: 16px;">
        <div class="card-body">
            <h5 class="card-title">Thanh toán</h5>
        </div>
    </div>

    <!-- Tính năng + QR -->
    <div class="bg-dark rounded-4 p-4">
        <h4 class="mb-4">Super có những tính năng nào</h4>

        <div class="row">
            <!-- Bên trái: Thông tin -->
            <div class="col-md-6">
                <form asp-action="TenAction" method="post" id="paymentForm">
                    <div class="mb-3">
                        <label for="name" class="form-label text-white">Tên tài khoản</label>
                        <input type="text" class="form-control bg-dark text-white border-light shadow-sm" asp-for="@Model.Name" required />
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label text-white">Địa chỉ email</label>
                        <input type="email" class="form-control bg-dark text-white border-light shadow-sm" asp-for="@Model.Email" required />
                    </div>

                    <div class="mb-3">
                        <label for="phone" class="form-label text-white">Số điện thoại</label>
                        <input type="text" class="form-control bg-dark text-white border-light shadow-sm" maxlength="10" oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                               onkeydown="return /^[0-9]$/.test(event.key) || ['Backspace','Delete','ArrowLeft','ArrowRight','Tab'].includes(event.key)" asp-for="@Model.PhoneNumber" required />
                    </div>
                    <div class="mb-3">
                        <label for="price" class="form-label text-white w-100">Số tiền thanh toán</label>
                        <input type="text" class="form-control bg-dark text-white border-light shadow-sm" maxlength="8" oninput="this.value = this.value.replace(/[^0-9]/g, '')"
                               onkeydown="return /^[0-9]$/.test(event.key) || ['Backspace','Delete','ArrowLeft','ArrowRight','Tab'].includes(event.key)" asp-for="@Model.PricePay" required />
                    </div>

                    <div class="mb-3">
                        <label for="content" class="form-label text-white w-100">Nội dung chuyển khoản</label>
                        <input type="text" class="form-control bg-dark text-white border-light shadow-sm" asp-for="@Model.Content" required />
                        <div class="form-text text-white-50 mt-1">
                            * Nội dung này sẽ được dùng để xác minh thanh toán của bạn.
                        </div>
                    </div>

                    <!-- Nút xác nhận -->
                    <div class="d-flex justify-content-end align-items-center mt-4">
                        <button type="submit"
                                class="btn btn-success px-4 py-2 fw-semibold rounded-pill shadow-sm"
                                data-bs-toggle="tooltip"
                                title="Nhấn để xác nhận thanh toán"
                                disabled
                                id="confirmButton">
                            <i class="bi bi-check-circle-fill me-2"></i> Xác nhận
                        </button>
                    </div>
                </form>
            </div>




            <!-- Bên phải: Mã QR -->
            <div class="col-md-6 d-flex justify-content-center align-items-center">
                <div class="qr-box">
                    <h5 class="mb-3">Quét mã để thanh toán</h5>
                    <img src="~/img/QR.png" alt="QR Code" />
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        tooltipTriggerList.forEach(function (el) {
            new bootstrap.Tooltip(el)
        });

        const form = document.getElementById('paymentForm');
        const inputs = form.querySelectorAll('input[required]');
        const confirmButton = document.getElementById('confirmButton');

        function checkInputs() {
            const allFilled = [...inputs].every(i => i.value.trim() !== '');
            confirmButton.disabled = !allFilled;
        }

        inputs.forEach(input => input.addEventListener('input', checkInputs));
        checkInputs();
    });
</script>
